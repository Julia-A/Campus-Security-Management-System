<%- include('partials/header') %>

<div class="body">
  <%- include('partials/sidebar') %>

  <div class="main">
    <h1 class="text-3xl font-bold mb-6">Emergency Contacts</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% emergencyContacts.forEach(contact => { %>
        <div class="bg-white p-4 rounded-2xl shadow hover:shadow-lg transition emergency-card">
          <h2 class="text-xl font-semibold mb-2"><%= contact.name %></h2>
          <p class="text-gray-700 mb-2">
            <i class="bi bi-telephone"></i>
            <a href="tel:<%= contact.phone %>" class="text-blue-600 hover:underline"><%= contact.phone %></a>
          </p>
          <p class="text-gray-700 mb-4">
            <i class="bi bi-envelope"></i>
            <a href="mailto:<%= contact.email %>" class="text-blue-600 hover:underline"><%= contact.email %></a>
          </p>

          <!-- Message Form -->
          <form action="/send-emergency-message" method="POST" class="mt-2 message-form">
            <input type="hidden" name="email" value="<%= contact.email %>">
            <textarea name="message" placeholder="Write your message..." class="w-full p-2 border rounded mb-2" required></textarea>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-2xl hover:bg-blue-600 send-message">
              Send Message
            </button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
