<%- include('partials/header') %>

<div class="log-in">
  <div class="login-container">
    
    <form action="/login" method="POST" class="login-form">
      <h1 class="">Login</h1>
      <div class="input-wrap">
        <input type="text" name="matricNumber" id="matricNumber" class="input" required>
        <label for="matricNumber" class="">Matric Number</label>
      </div>
      <div class="input-wrap password-container">
        <input type="password" name="password" id="login-password" class="input" required>
        <label for="login-password">Password</label>
        <i class="bi bi-eye-slash toggle-password" data-target="login-password"></i>
      </div>
      <button type="submit" class="login-btn">Login</button>
      <p class="forgot-password">
        <a href="/forgot-password" class="">Forgot Password?</a>
      </p>
    </form>

    <div class="image-side-login">
      <img src="../images/register-img.png" alt="">
    </div>
  </div>

  
  
</div>
